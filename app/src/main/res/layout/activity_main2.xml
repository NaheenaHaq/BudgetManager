<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.myapplication.Main2Activity"
    android:orientation="vertical">

    <TextView android:text="Balance: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/output"/>


       // android:hint="Enter Expense:"
        //android:textSize="25sp"
       // android:layout_width="match_parent"
        //android:layout_height="wrap_content"
        //android:id="@+id/inputExp"
       //>
    <EditText
        android:hint="Food"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputFood"
        />
    <EditText
        android:hint="Accommodation"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputAccommodation"
        />
    <EditText
        android:hint="Health"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputHealth"
        />
    <EditText
        android:hint="Tuitionfees"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputTuitionfees"
        />
    <EditText
        android:hint="Laundry"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputLaundry"
        />
    <EditText
        android:hint="Cloth"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputCloth"
        />
    <EditText
        android:hint="Grocery"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputGrocery"
        />
    <EditText
        android:hint="Transport"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_green"
        android:gravity="center"
        android:id="@+id/inputTransport"
        />
    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/sky_color"
        android:id="@+id/enter_button"
        />

    <Button
        android:text="Set Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/sky_color"
        android:id="@+id/set_button" />


</LinearLayout>
